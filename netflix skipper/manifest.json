{
    "name": "Better Netflix",
    "description": "Improve netflix website",
    "version": "2.0",
    "permissions": [
        "storage"
    ],
    "manifest_version": 3,
    "action": {
        "default_popup": "skipper.html",
        "default_icon": "logo.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.netflix.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}